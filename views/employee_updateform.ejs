<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>
<style>
    table,th,tr,td {
        border-collapse: collapse;
        border: 1px solid #d3d3d3;
    }
</style>

<body>
    <% include partials/menu1 %>
        <div class="container-fluid bg-3 text-center">
            <h3>
                <%= page %>
            </h3><br>
            <div class="row">
                
                <form action="../<%=employee._id %>/update" method="POST" >
                    <table class='table table-striped table-responsive-md btm-table'>
                        <tr>
                            <th>Profile ID : </th>
                            <td><input type="number" name='profileid' placeholder='profileid' readonly value='<%=employee.profileid %>'></td>
                        </tr>
                        <tr>
                            <th>Employee ID : </th>
                            <td><input type="number" name='employeeid' placeholder='employeeid' readonly value='<%=employee.employeeid %>'></td>
                        </tr>
                        <tr>
                            <th>Name : </th>
                            <td><input type='text' name='name' placeholder="name" required value='<%=employee.name%>'></td>
                        </tr>
                        <tr>
                            <th>Gender : </th>
                            <td><input type='text' name='gender' placeholder="gender" required value='<%=employee.gender%>'></td>
                        </tr>
                        <tr>
                            <th>Contact Number : </th>
                            <td><input type="number" name='contactnumber' placeholder="contact number" required value='<%=employee.contactnumber %>'></td>
                        </tr>
                        <tr>
                            <th>Address : </th>
                            <td><input type="text" name='address' placeholder="address" required value='<%=employee.address %>'></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="submit" value="Update" ></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
</body>
<% include partials/script %>

</html>