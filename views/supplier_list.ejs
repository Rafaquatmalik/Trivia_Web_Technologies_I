<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu1 %>
<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <table class='table table-striped table-responsive-md btm-table'>
        <thead>
            <tr>
                <th>Profile ID</th>
                <th>Supplier ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Email</th>
                <th>Contact Number</th>
                <th>address</th>
                <th>Product</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% suppliers.forEach(function(supplier){ %>
                <tr>
                    <td><%=supplier.profileid %></td>
                    <td><%=supplier.supplierid %></td>
                    <td><%=supplier.name %></td>
                    <td><%=supplier.gender %></td>
                    <td><%=supplier.age %></td>
                    <td><%=supplier.email %></td>
                    <td><%=supplier.contactnumber %></td>
                    <td><%=supplier.address %></td>
                    <td><%=supplier.product %></td>
                    <td>
                        <form action='updateform/<%=supplier._id %>' method="POST">
                            <button type="submit">Update</button>
                        </form>
                    </td>
                    <td>
                        <form action='/suppliers/<%=supplier._id %>/delete ' method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                                
                </tr>
             <% });  %>   
        </tbody>
    </table>
    <form action='/suppliers/createform' method="POST">
        <button type="submit">Add Supplier</button>
   </form>
  </div>
</div>
</body>
<% include partials/script %>
</html>
