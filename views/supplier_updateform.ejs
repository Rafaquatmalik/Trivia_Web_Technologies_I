<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>
<style>
    table,th,tr,td {
        border-collapse: collapse;
        border: 1px solid #d3d3d3;
    }
</style>

<body>
    <% include partials/menu1 %>
        <div class="container-fluid bg-3 text-center">
            <h3>
                <%= page %>
            </h3><br>
            <div class="row">
                
                <form action="../<%=supplier._id %>/update" method="POST" >
                    <table class='table table-striped table-responsive-md btm-table'>
                        <tr>
                            <th>Profile ID : </th>
                            <td><input type="number" name='profileid' placeholder='profileid' readonly value='<%=supplier.profileid %>'></td>
                        </tr>
                        <tr>
                            <th>Supplier ID : </th>
                            <td><input type="number" name='supplierid' placeholder='supplierid' readonly value='<%=supplier.supplierid%>'></td>
                        </tr>
                        <tr>
                            <th>Name : </th>
                            <td><input type='text' name='name' placeholder="name" required value='<%=supplier.name%>'></td>
                        </tr>
                        <tr>
                            <th>Gender : </th>
                            <td><input type='text' name='gender' placeholder="gender" required value='<%=supplier.gender%>'></td>
                        </tr>

                        <tr>
                            <th>Age : </th>
                            <td><input type="number" name='age' placeholder="age" required value='<%=supplier.age %>'></td>
                        </tr>
                        <tr>
                            <th>Email : </th>
                            <td><input type='text' name='email' placeholder="email" required value='<%=supplier.email%>'></td>
                        </tr>
                        <tr>
                            <th>Contact Number : </th>
                            <td><input type="number" name='contactnumber' placeholder="contactnumber" required value='<%=supplier.contactnumber %>'></td>
                        </tr>
                        <tr>
                            <th>Address : </th>
                            <td><input type='text' name='address' placeholder="address" required value='<%=supplier.address%>'></td>
                        </tr>
                        <tr>
                            <th>Product : </th>
                            <td><input type='text' name='product' placeholder="product" required value='<%=supplier.product%>'></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="submit" value="Update" ></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
</body>
<% include partials/script %>

</html>