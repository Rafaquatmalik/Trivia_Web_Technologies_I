<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu1 %>
<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <table class='table table-striped table-responsive-md btm-table'>
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Inventory ID</th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach(function(transaction){ %>
                <tr>
                    <td><%=transaction.transactionid %></td>
                    <td><%=transaction.inventoryid %></td>
                    <td><%=transaction.product %></td>
                    <td><%=transaction.price %></td>
                    <td><%=transaction.quantity %></td>
                    <td>
                        <form action='updateform/<%=transaction._id %>' method="POST">
                            <button type="submit">Update</button>
                        </form>
                    </td>
                    <td>
                        <form action='/transactions/<%=transaction._id %>/delete ' method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                                
                </tr>
             <% });  %>   
        </tbody>
    </table>
    <form action='/transactions/createform' method="POST">
        <button type="submit">Add Transaction</button>
   </form>
  </div>
</div>
</body>
<% include partials/script %>
</html>
